{
  "name": "@events.comp-soc.com/api",
  "version": "1.0.0",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "start": "node dist/src/app.js",
    "build": "tsc",
    "dev": "nodemon --watch src --exec tsx src/app.ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down -v",
    "test": "vitest run",
    "test:local": "pnpm test:db:up && vitest; pnpm test:db:down",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clerk/fastify": "^2.6.12",
    "@events.comp-soc.com/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "fastify-tsconfig": "^3.0.0",
    "nanoid": "^5.1.6",
    "nodemon": "^3.1.11",
    "pg": "^8.16.3",
    "svix": "^1.84.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
