{
  "name": "@events.comp-soc.com/api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "src/app.ts",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "start": "tsx src/app.ts",
    "build": "tsc && tsc-alias",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clerk/fastify": "^2.6.12",
    "@events.comp-soc.com/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsc-alias": "^1.8.10",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  }
}
